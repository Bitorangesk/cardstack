<div>{{#link-to "index"}}Back to home{{/link-to}}</div>

<article>
  <h1>{{cs-field content "title"}}</h1>
  <h2>
    {{#cs-field content "created" as |date|}}
      {{moment-format date "YYYY-MM-DD"}}
    {{/cs-field}}
  </h2>

  <div>
    {{#cs-field-group content name="address" fields="street,city,state,country,zip" as |address|}}
      {{address.street}}<br/>
      {{address.city}}, {{address.state}} {{address.zip}}<br/>
      {{address.country}}
    {{/cs-field-group}}
  </div>

  {{#cs-field content "body" as |body|}}
    {{render-mobiledoc mobiledoc=body}}
  {{/cs-field}}
</article>
