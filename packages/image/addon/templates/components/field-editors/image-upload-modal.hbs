<input type='file' accept="image/*" onchange={{action 'uploadFile'}}>

{{#if dataURL}}
  <img src={{dataURL}}>
{{/if}}

<div class="cardstack-image-upload-modal-buttons">
  <button {{action cancel}}>Cancel</button>

  {{#if dataURL}}
    <button {{action 'updateImage'}}>Update Image</button>
  {{/if}}
</div>