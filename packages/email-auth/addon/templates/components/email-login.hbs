{{#if login.isRunning}}
  <div class="cardstack-email-loading">{{loadingMessage}}</div>
{{else}}
  {{#if cardstackSession.isAuthenticated}}
    <p class='cardstack-already-authenticated-message'>{{loggedInMessage}}</p>
  {{else if cardstackSession.isPartiallyAuthenticated}}
    <p class='cardstack-partial-authentication-message'>{{cardstackSession.message}}</p>

    <button class='cardstack-restart-login-button' onclick={{action 'restartLogin'}}>{{restartLoginText}}</button>
  {{else}}
    {{input value=email type='email' placeholder="email@example.com"}}
    <button class='cardstack-login-button' onclick={{action login}}>{{loginText}}</button>
  {{/if}}
{{/if}}