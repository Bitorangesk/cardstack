{{#toolbar-manager}}
  {{yield}}

  {{#fixed-within-toolbars top=0 right=0}}
    {{cardstack-tools-launcher}}
  {{/fixed-within-toolbars}}

{{/toolbar-manager}}

{{#if tools.active}}
  {{in-top-toolbar show=(component "cardstack-header") }}
  {{#if (is-component tools.activePanel)}}
    {{in-right-toolbar show=(component tools.activePanel) }}
  {{/if}}
{{/if}}
